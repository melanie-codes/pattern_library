source 'https://rubygems.org'

# main
gem 'sinatra', require: 'sinatra/base'

# db
gem 'pg'
gem 'activerecord'
gem 'sinatra-activerecord'

# other
gem 'rake'
gem 'activesupport'
gem 'sinatra-json'

# hal
gem 'oat'

# rubocop
gem 'rubocop', require: false

# hyperresource
gem 'hyperresource'

# testing
group :development, :test do
  gem 'pry'
  gem 'cucumber'
  gem 'rspec'
  gem 'capybara'
  gem 'database_cleaner'
  gem 'rack-test'
end
